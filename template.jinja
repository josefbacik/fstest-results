<html>
<head>
    <title>fstests results</title>
    <link rel="stylesheet" href="style.css"/>
</head>
<body>
<table class="runs">
  <tr><th class="runs" colspan="6"> Runs ({{ runs|length }} total)</th></tr>
  <tr>
    <th>Username</th><th>Hostname</th><th>Configuration</th><th>Tests Run</th>
    <th>Tests Failed</th><th>Date</th>
  </tr>
  {% for r in runs[:10] %}
    <tr>
      <td>{{ r.username }}</td><td>{{ r.hostname }}</td><td>{{ r.config }}</td>
      <td>{{ r.total_run() }}</td><td>{{ r.fails|length }}</td>
      <td><a href="{{ r.link_path() }}">{{ r.date }}</a></td>
    </tr>
  {% endfor %}
</table>
<table class="results">
  <tr class="failing">
    <th colspan="2">Failures ({{ fails|length }} total)</th>
  </tr>
  <tr>
    <th>Name</th><th>date</th>
  </tr>
  {% for t in fails %}
    <tr>
      <td><a href="/{{ t.name + ".html" }}">{{ t.name }}</a></td>
      <td><a href="{{ t.fails[0].link_path() }}">{{ t.fails[0].date }}</a></td>
    </tr>
  {% endfor %}
</table>
</body>
</html>
